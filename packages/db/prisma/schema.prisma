generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String           @id       @default(uuid())
  name         String           @unique
  pair         Pair? 
}

model Pair {
  id                         String           @id       @default(uuid())

  userId                     String           @unique
  user                       User             @relation(references: [id], fields: [userId])

  firstPartnerNickName       String           @unique
  secondPartnerNickName      String           @unique
  phrase                     String           @unique
}


